<Page x:Class="Among_Us_ModManager.Pages.Mod_Update.ModVersionSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Among_Us_ModManager.Pages.Mod_Update"
      Title="MODバージョン選択ページ"
      Background="White"
      Margin="20">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="MODアップデート確認" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

        <!-- MOD名 -->
        <StackPanel Grid.Row="1" Margin="0,5,0,0">
            <TextBlock FontWeight="Bold" FontSize="18" Text="{Binding SelectedMod.Name}"/>
        </StackPanel>

        <!-- 導入済バージョン -->
        <StackPanel Grid.Row="2" Margin="0,5,0,0">
            <TextBlock>
                <Run Text="導入済バージョン: " FontWeight="Bold"/>
                <Run Text="{Binding SelectedMod.InstalledVersion}"/>
            </TextBlock>
        </StackPanel>

        <!-- 最新バージョン（赤太文字） -->
        <StackPanel Grid.Row="3" Margin="0,5,0,0">
            <TextBlock>
                <Run Text="最新バージョン: " FontWeight="Bold"/>
                <Run Text="{Binding SelectedMod.LatestVersion}" Foreground="Red"/>
            </TextBlock>
        </StackPanel>

        <!-- DLLファイルパス -->
        <StackPanel Grid.Row="4" Margin="0,5,0,0">
            <TextBlock>
                <Run Text=".dll ファイルのパス: " FontWeight="Bold"/>
                <Run Text="{Binding DllDisplayPath}"/>
            </TextBlock>
            <TextBlock Text="(新しいバージョンはここにダウンロードされ、既存のファイルはバックアップされます)" FontSize="10" Foreground="Gray"/>
        </StackPanel>

        <!-- アップデートステータス表示用テキストブロック -->
        <TextBlock x:Name="UpdateStatusTextBlock" Grid.Row="5" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="16" FontWeight="Bold" Foreground="Blue" Text="アップデート準備完了..." Margin="0,20,0,0"/>

        <!-- ボタンエリア -->
        <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="戻る" Width="100" Height="30" Click="Back_Click"/>
            <Button Content="アップデートを実行" Width="150" Height="30" Margin="10,0,0,0" Click="ExecuteUpdate_Click"/>
        </StackPanel>
    </Grid>
</Page>
