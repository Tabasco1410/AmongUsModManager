<?xml version="1.0" encoding="utf-8"?>
<Page Background="White" Margin="20" Title="MODバージョン選択ページ" x:Class="Among_Us_ModManager.Pages.Mod_Update.ModVersionSelectionPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:local="clr-namespace:Among_Us_ModManager.Pages.Mod_Update" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"><Grid>
<Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
<RowDefinition Height="*"/>
<RowDefinition Height="Auto"/>
</Grid.RowDefinitions>
<TextBlock FontSize="24" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10" Text="MODアップデート確認"/>
<!-- MOD名 -->
<StackPanel Grid.Row="1" Margin="0,5,0,0">
<TextBlock FontSize="18" FontWeight="Bold" Text="{Binding SelectedMod.Name}"/>
</StackPanel>
<!-- 導入済バージョン -->
<StackPanel Grid.Row="2" Margin="0,5,0,0">
<TextBlock>
<Run FontWeight="Bold" Text="導入済バージョン: "/>
<Run Text="{Binding SelectedMod.InstalledVersion}"/>
</TextBlock>
</StackPanel>
<!-- 最新バージョン（赤太文字） -->
<StackPanel Grid.Row="3" Margin="0,5,0,0">
<TextBlock>
<Run FontWeight="Bold" Text="最新バージョン: "/>
<Run Foreground="Red" Text="{Binding SelectedMod.LatestVersion}"/>
</TextBlock>
</StackPanel>
<!-- DLLファイルパス -->
<StackPanel Grid.Row="4" Margin="0,5,0,0">
<TextBlock>
<Run FontWeight="Bold" Text=".dll ファイルのパス: "/>
<Run Text="{Binding DllDisplayPath}"/>
</TextBlock>
<TextBlock FontSize="10" Foreground="Gray" Text="(新しいバージョンはここにダウンロードされ、既存のファイルはバックアップされます)"/>
</StackPanel>
<!-- アップデートステータス表示用テキストブロック -->
<TextBlock FontSize="16" FontWeight="Bold" Foreground="Blue" Grid.Row="5" HorizontalAlignment="Center" Margin="0,20,0,0" Text="アップデート準備完了..." VerticalAlignment="Center" x:Name="UpdateStatusTextBlock"/>
<!-- ボタンエリア -->
<StackPanel Grid.Row="6" HorizontalAlignment="Right" Margin="0,20,0,0" Orientation="Horizontal">
<Button Click="Back_Click" Content="戻る" Height="30" Width="100"/>
<Button Click="ExecuteUpdate_Click" Content="アップデートを実行" Height="30" Margin="10,0,0,0" Width="150"/>
</StackPanel>
</Grid></ScrollViewer></Page>