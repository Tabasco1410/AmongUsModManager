<Page
    x:Class="Among_Us_ModManager.Pages.Mod_Update.Select_Updatemod"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:converters="clr-namespace:Among_Us_ModManager.Converters"
    mc:Ignorable="d"
    Title="MODアップデート選択ページ"
    Background="White"
    Loaded="Page_Loaded">

    <!-- ✅ ResourcesはPage直下に1回だけ -->
    <Page.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>

    <!-- ✅ ScrollViewerはPageの唯一の子 -->
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock FontSize="24" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10" Text="MODのアップデート確認"/>

            <ListView Grid.Row="1" Margin="0,10,0,0" SelectionMode="Single" x:Name="ModListView">
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="MOD名" Width="150"/>
                        <GridViewColumn DisplayMemberBinding="{Binding InstalledVersion}" Header="導入済バージョン" Width="150"/>
                        <GridViewColumn DisplayMemberBinding="{Binding LatestVersion}" Header="最新バージョン" Width="150"/>
                        <GridViewColumn Header="状態" Width="200">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding DetectionStatus}"/>
                                        <TextBlock Text="{Binding UpdateDetectionTime, StringFormat=' ({0:yyyy/MM/dd HH:mm})'}" 
                                                   Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn Header="自動アップデート" Width="120">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center" IsChecked="{Binding IsAutoUpdateEnabled}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>

            <StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,10,0,0" Orientation="Horizontal">
                <Button Click="Back_Click" Content="戻る" Height="30" Width="100"/>
                <Button Click="ExecuteUpdate_Click" Content="アップデート実行" Height="30" Margin="10,0,0,0" Width="120"/>
                <Button Click="ManualFolderSelect_Click" Content="手動で選択" Height="30" Margin="10,0,0,0" Width="120"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
