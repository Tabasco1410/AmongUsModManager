<Page Background="White" Title="管理者画面"
      x:Class="Among_Us_ModManager.Pages.AdminPanelPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- ヘッダー -->
            <RowDefinition Height="*"/>
            <!-- ニュースリスト -->
            <RowDefinition Height="Auto"/>
            <!-- 下部ボタン固定 -->
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <TextBlock Text="管理者画面" FontSize="24" FontWeight="Bold"/>

        <!-- ニュース一覧 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="NewsListPanel"/>
        </ScrollViewer>

        <!-- 下部ボタン固定 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="戻る" Width="80" Margin="0,0,10,0" Click="BackButton_Click"/>
            <Button Content="ニュース追加" Width="100" Margin="0,0,10,0" Click="AddNews_Click"/>
            <Button Content="保存" Width="80" Click="SaveNews_Click"/>
            <Button Content="Git Push" Width="80" Margin="10,0,0,0" Click="PushNews_Click"/>
        </StackPanel>
    </Grid>
</Page>
