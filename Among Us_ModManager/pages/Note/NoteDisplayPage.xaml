<?xml version="1.0" encoding="utf-8"?>
<Page Background="White" Margin="20" Title="記事閲覧" x:Class="Among_Us_ModManager.NoteDisplayPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"><Grid>
<Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="*"/>
<RowDefinition Height="Auto"/>
</Grid.RowDefinitions>
<TextBlock FontSize="24" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10" x:Name="ArticleTitleTextBlock"/>
<cef:ChromiumWebBrowser Grid.Row="1" Margin="0,10,0,0" x:Name="ArticleBrowser"/>
<StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,20,0,0" Orientation="Horizontal">
<Button Click="OpenInBrowser_Click" Content="ブラウザで開く" Height="30" Width="120"/>
<Button Click="Back_Click" Content="戻る" Height="30" Width="100"/>
</StackPanel>
</Grid></ScrollViewer></Page>