<?xml version="1.0" encoding="utf-8"?>
<Page Background="White" Margin="20" Title="読む記事を選択" x:Class="Among_Us_ModManager.NoteSelectionPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"><Grid>
<Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="*"/>
<RowDefinition Height="Auto"/>
</Grid.RowDefinitions>
<TextBlock FontSize="24" FontWeight="Bold" Grid.Row="0" Margin="0,0,0,10" Text="読む記事を選択"/>
<ListBox Grid.Row="1" Margin="0,10,0,0" SelectionChanged="NoteListBox_SelectionChanged" x:Name="NoteListBox">
<ListBox.ItemTemplate>
<DataTemplate>
<TextBlock FontSize="16" Margin="5" Text="{Binding Title}"/>
</DataTemplate>
</ListBox.ItemTemplate>
</ListBox>
<StackPanel Grid.Row="2" HorizontalAlignment="Right" Margin="0,20,0,0" Orientation="Horizontal">
<Button Click="Back_Click" Content="戻る" Height="30" Width="100"/>
</StackPanel>
</Grid></ScrollViewer></Page>