<Page x:Class="Among_Us_ModManager.NoteSelectionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="読む記事を選択" Background="White" Margin="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="読む記事を選択"
                   FontSize="24" FontWeight="Bold"
                   Margin="0,0,0,10" Grid.Row="0"/>

        <ListBox x:Name="NoteListBox"
                 Grid.Row="1" Margin="0,10,0,0"
                 SelectionChanged="NoteListBox_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Title}"
                               FontSize="16" Margin="5"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="戻る" Width="100" Height="30" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>