<Page x:Class="Among_Us_ModManager.Pages.PutZipFile.Put_Zip_File"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Put_Zip_File">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="MOD展開＆設置"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0,0,0,10"/>
            <TextBlock x:Name="IntroTextBlock"
                       Text="ZIPファイルを展開してインストール中です..."
                       FontSize="16"/>
            <TextBlock x:Name="FinishTextBlock"
                       Text="インストールが完了しました。"
                       FontSize="16"
                       Visibility="Collapsed"
                       Margin="0,10,0,0"/>
        </StackPanel>

        <!-- プログレスバーとログ -->
        <StackPanel Grid.Row="1">
            <ProgressBar x:Name="InstallProgressBar"
                         Height="20"
                         Minimum="0"
                         Maximum="100"
                         Margin="0,0,0,10"/>
            <TextBlock x:Name="StatusTextBlock"
                       Text="準備中..."
                       FontSize="16"
                       TextWrapping="Wrap"
                       Height="40"
                       Margin="0,0,0,10"/>
            <ScrollViewer Height="200"
                          VerticalScrollBarVisibility="Auto"
                          Margin="0,0,0,10">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </StackPanel>

        <!-- フッター：戻るボタン -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="ReturnHomeButton"
                        Content="ホームに戻る"
                        Width="150"
                        Height="35"
                        Visibility="Collapsed"
                        Click="ReturnHomeButton_Click" />
            </StackPanel>
        </Grid>
    </Grid>
</Page>
