<Page x:Class="Among_Us_ModManager.Pages.Install.GitHub.CheckVersionPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CheckVersionPage">


    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- タイトル -->
            <RowDefinition Height="2*"/>
            <!-- リリース一覧を広く表示 -->
            <RowDefinition Height="*"/>
            <!-- ファイル一覧（選択後） -->
            <RowDefinition Height="Auto"/>
            <!-- ボタン群 -->
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Grid.Row="0" 
                   Text="インストールするバージョンを選択してください"
                   FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- リリース一覧 -->
        <ListView Grid.Row="1" x:Name="ReleaseListView" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="リリース名" Width="400" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="公開日" Width="200" DisplayMemberBinding="{Binding PublishedAt, StringFormat={}{0:yyyy/MM/dd}}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- ファイル一覧（最初は非表示） -->
        <StackPanel Grid.Row="2" x:Name="FilesPanel" Orientation="Vertical" Visibility="Collapsed" Margin="0,10,0,0">
            <TextBlock Text="リリースのファイル一覧" FontWeight="Bold" Margin="0,0,0,5"/>
            <ListView x:Name="FileListView" SelectionMode="Single">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="ファイル名" Width="400" DisplayMemberBinding="{Binding Name}" />
                        <GridViewColumn Header="サイズ" Width="100" DisplayMemberBinding="{Binding Size}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>

        <!-- ボタン群 -->
        <Grid Grid.Row="3" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <!-- 戻る -->
                <ColumnDefinition Width="Auto"/>
                <!-- 選択 -->
                <ColumnDefinition Width="*"/>
                <!-- 空きスペース -->
                <ColumnDefinition Width="Auto"/>
                <!-- インストール -->
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Style="{StaticResource TextButtonStyle}" Click="BackButton_Click">
                戻る
            </Button>

            <Button Grid.Column="1" Style="{StaticResource TextButtonStyle}" Margin="10,0,0,0" Click="SelectVersion_Click">
                バージョンを選択
            </Button>

            <Button Grid.Column="3" x:Name="InstallButton"
        Style="{StaticResource TextButtonStyle}"
        Click="InstallFile_Click"
        Visibility="Collapsed"
        MinWidth="200">
                <!-- 必要な幅に調整 -->
                ダウンロードしてインストールする
            </Button>

        </Grid>
    </Grid>
</Page>
