<?xml version="1.0" encoding="utf-8"?>
<Page Title="SelectZipFile" x:Class="Among_Us_ModManager.Pages.Install.Zip.SelectZipFile" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

<ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"><Grid Margin="20">
<Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<!-- タイトル -->
<RowDefinition Height="*"/>
<!-- 入力項目 -->
<RowDefinition Height="Auto"/>
<!-- ボタン -->
</Grid.RowDefinitions>
<!-- タイトル -->
<TextBlock FontSize="20" FontWeight="Bold" Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,20" Text=".zipファイル導入画面"/>
<!-- 入力項目 -->
<StackPanel Grid.Row="1" Margin="0,0,0,20">
<!-- ZIPファイル選択 -->
<Grid Margin="0,10">
<Grid.ColumnDefinitions>
<ColumnDefinition Width="Auto"/>
<ColumnDefinition Width="*"/>
<ColumnDefinition Width="Auto"/>
</Grid.ColumnDefinitions>
<TextBlock Grid.Column="0" Text="MOD ZIPファイル：" VerticalAlignment="Center"/>
<TextBox Grid.Column="1" IsReadOnly="True" Margin="10,0" Name="ZipFilePathTextBox" TextChanged="ZipFilePathTextBox_TextChanged" VerticalAlignment="Center"/>
<Button Click="SelectZipFile_Click" Content="参照" Grid.Column="2" Width="70"/>
</Grid>
<!-- Among Us.exe選択 -->
<Grid Margin="0,10">
<Grid.ColumnDefinitions>
<ColumnDefinition Width="Auto"/>
<ColumnDefinition Width="*"/>
<ColumnDefinition Width="Auto"/>
</Grid.ColumnDefinitions>
<TextBlock Grid.Column="0" Text="Among Us.exe：" VerticalAlignment="Center"/>
<TextBox Grid.Column="1" Margin="10,0" Name="ExePathTextBox" TextChanged="ExePathTextBox_TextChanged" VerticalAlignment="Center"/>
<Button Click="SelectExeFile_Click" Content="参照" Grid.Column="2" Width="70"/>
</Grid>
<!-- コピー後のフォルダ名 -->
<Grid Margin="0,10">
<Grid.RowDefinitions>
<RowDefinition Height="Auto"/>
<RowDefinition Height="Auto"/>
</Grid.RowDefinitions>
<Grid.ColumnDefinitions>
<ColumnDefinition Width="Auto"/>
<ColumnDefinition Width="*"/>
<ColumnDefinition Width="Auto"/>
</Grid.ColumnDefinitions>
<TextBlock Grid.Column="0" Grid.Row="0" Text="コピー後のフォルダ名：" VerticalAlignment="Center"/>
<TextBox GotFocus="CopyFolderNameTextBox_GotFocus" Grid.Column="1" Grid.Row="0" LostFocus="CopyFolderNameTextBox_LostFocus" Margin="10,0" Name="CopyFolderNameTextBox" TextChanged="CopyFolderNameTextBox_TextChanged" VerticalAlignment="Center"/>
<TextBlock Foreground="Red" Grid.Column="2" Grid.Row="0" Margin="10,0" Name="ErrorTextBlock" VerticalAlignment="Center"/>
<TextBlock FontSize="12" Foreground="Gray" Grid.Column="1" Grid.Row="1" Margin="10,2,0,0" Text="ファイル名はModの名前にすることをオススメします"/>
</Grid>
</StackPanel>
<!-- ボタン類 -->
<Grid Grid.Row="2" Margin="0,10,0,0">
<Grid.ColumnDefinitions>
<ColumnDefinition Width="Auto"/>
<ColumnDefinition Width="*"/>
<ColumnDefinition Width="Auto"/>
</Grid.ColumnDefinitions>
<Button Click="BackButton_Click" Content="戻る" Grid.Column="0" Height="30" Margin="10" Width="80"/>
<Button Click="InstallButton_Click" Content="インストール開始" Grid.Column="2" Height="40" IsEnabled="False" Margin="10" Name="InstallButton" Width="150"/>
</Grid>
</Grid></ScrollViewer></Page>