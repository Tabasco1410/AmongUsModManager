<Page x:Class="Among_Us_ModManager.Pages.Install_TypeChoosePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Among_Us_ModManager.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Install_TypeChoosePage">

    <Grid>
        <!-- 中央に縦にボタンを配置 -->
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- 非表示にする場合 -->
            <Button Width="250" Height="60" Content="TownOfHost-Funをインストールする" 
            Margin="0,0,0,20" Click="InstallDefault_Click" Visibility="Collapsed"/>
            <Button Width="250" Height="60" Content="Modの.zipファイルからインストールする" Click="InstallFromZip_Click"/>
        </StackPanel>


        <!-- 左下に戻るボタン -->
        <Button Width="100" Height="40" Content="戻る" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20"
                Click="BackButton_Click"/>
    </Grid>
</Page>
