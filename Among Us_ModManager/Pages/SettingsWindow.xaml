<Window x:Class="Among_Us_ModManager.Pages.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="メニュー" Height="450" Width="800"
        Background="#FFF">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <!-- 左メニューの幅 -->
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左メニュー -->
        <Border Grid.Column="0" Background="#EEE" BorderBrush="#CCC" BorderThickness="0,0,1,0">
            <!-- StackPanelだと子の幅は自動調整されないので、Gridを使う -->
            <StackPanel>
                <Button Name="BtnNotice"
                        Content="お知らせ"
                        Margin="5"
                        Click="BtnNotice_Click"
                        Style="{StaticResource TextButtonStyle}"
                        HorizontalAlignment="Stretch"/>

                <Button Name="BtnSettings"
                        Content="設定"
                        Margin="5"
                        Click="BtnSettings_Click"
                        Style="{StaticResource TextButtonStyle}"
                        HorizontalAlignment="Stretch"/>
            </StackPanel>
        </Border>

        <!-- 右詳細エリア -->
        <Border Grid.Column="1" BorderBrush="#CCC" BorderThickness="1,0,0,0" Background="White">
            <Frame Name="DetailFrame" NavigationUIVisibility="Hidden" Background="White"/>
        </Border>
    </Grid>
</Window>
