<Page x:Class="Among_Us_ModManeger.Pages.TownOfHostK.TownOfHostK_Install"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="TownOfHostK_Install">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ヘッダー -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="TownOfHost-K インストール" FontSize="28" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock Text="以下の状態を確認し、「インストール開始」ボタンを押してください。" FontSize="16"/>
        </StackPanel>

        <!-- 本文：プログレスバーとログ -->
        <StackPanel Grid.Row="1">
            <ProgressBar x:Name="InstallProgressBar" Height="20" Minimum="0" Maximum="100" Margin="0,0,0,10"/>
            <TextBlock x:Name="StatusTextBlock" Text="準備完了" FontSize="16" TextWrapping="Wrap" Height="40" Margin="0,0,0,10"/>
            <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         TextWrapping="Wrap"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"/>
            </ScrollViewer>
        </StackPanel>

        <!-- フッター：ボタン -->
        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="0">
                <Button Content="戻る" Width="100" Height="30" Margin="0,0,10,0" Click="BackButton_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="1">
                <Button Content="インストール開始"
                        Width="150"
                        Height="35"
                        Margin="0,0,10,0"
                        Click="InstallButton_Click"/>
                <Button x:Name="ReturnHomeButton"
                        Content="ホームに戻る"
                        Width="150"
                        Height="35"
                        Margin="0,0,0,0"
                        Visibility="Collapsed"
                        Click="ReturnHomeButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
