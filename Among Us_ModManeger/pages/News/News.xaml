<Page x:Class="Among_Us_ModManeger.Pages.News"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="News">

    <Grid Background="White" Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Text="お知らせ"
                   FontSize="28"
                   FontWeight="Bold"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,10"/>

        <!-- メインコンテンツ -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ニュース一覧 -->
            <ListBox x:Name="NewsListBox"
                     Grid.Column="0"
                     SelectionChanged="NewsListBox_SelectionChanged"
                     ScrollViewer.VerticalScrollBarVisibility="Auto"
                     HorizontalContentAlignment="Stretch"
                     BorderThickness="1"
                     BorderBrush="Gray">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Title}" 
                                   Padding="5"
                                   Margin="5,2"
                                   FontSize="14"
                                   Cursor="Hand"
                                   Background="LightGray"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- 詳細表示 -->
            <Border Grid.Column="1" 
                    BorderBrush="Gray" 
                    BorderThickness="1" 
                    CornerRadius="5" 
                    Padding="10" 
                    Margin="10,0,0,0">
                <StackPanel>
                    <TextBlock x:Name="DetailDateTextBlock" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="DetailTitleTextBlock" 
                               FontSize="18" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10" 
                               TextWrapping="Wrap"/>

                    <!-- Markdown表示用 WebBrowser -->
                    <WebBrowser x:Name="DetailWebBrowser"
                                Height="300"
                                Margin="0"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 戻るボタン -->
        <Button Grid.Row="2"
                Content="戻る"
                Width="100"
                Height="40"
                HorizontalAlignment="Left"
                Click="BackButton_Click"
                Margin="0,10,0,0"/>
    </Grid>
</Page>
