<Page x:Class="Among_Us_ModManeger.NoteDisplayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Title="記事閲覧"
      Background="White"
      Margin="20">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 記事のタイトル -->
        <TextBlock x:Name="ArticleTitleTextBlock" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

        <!-- HTMLコンテンツを表示するためのWebBrowserコントロール -->
        <!-- これにより、note.comの記事のようなHTMLレイアウトを再現できます。 -->
        <WebBrowser x:Name="ArticleWebBrowser" Grid.Row="1" Margin="0,10,0,0"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <!-- 外部ブラウザで元の記事を開くボタン -->
            <Button Content="ブラウザで開く" Width="120" Height="30" Margin="0,0,10,0" Click="OpenInBrowser_Click"/>
            <Button Content="戻る" Width="100" Height="30" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Page>
