<Page x:Class="Among_Us_ModManeger.Pages.Mod_Update.Select_Updatemod"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:converters="clr-namespace:Among_Us_ModManeger.Converters"
      mc:Ignorable="d"
      Title="MODアップデート選択ページ"
      Background="White"
      Loaded="Page_Loaded">

    <Page.Resources>
        <!-- クラス名に合わせて修正 -->
        <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Page.Resources>


    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="MODのアップデート確認" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" Grid.Row="0"/>

        <ListView x:Name="ModListView" Grid.Row="1" Margin="0,10,0,0" SelectionMode="Single">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="MOD名" Width="150" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="導入済バージョン" Width="150" DisplayMemberBinding="{Binding InstalledVersion}"/>
                    <GridViewColumn Header="最新バージョン" Width="150" DisplayMemberBinding="{Binding LatestVersion}"/>
                    <GridViewColumn Header="状態" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{Binding DetectionStatus}"/>
                                    <TextBlock Text="{Binding UpdateDetectionTime, StringFormat=' ({0:yyyy/MM/dd HH:mm})'}"
                                               Visibility="{Binding IsUpdateAvailable, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="自動アップデート" Width="120">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding IsAutoUpdateEnabled}" HorizontalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="戻る" Width="100" Height="30" Click="Back_Click"/>
            <Button Content="アップデート実行" Width="120" Height="30" Margin="10,0,0,0" Click="ExecuteUpdate_Click"/>
            <Button Content="手動で選択" Width="120" Height="30" Margin="10,0,0,0" Click="ManualFolderSelect_Click"/>
        </StackPanel>
    </Grid>
</Page>
