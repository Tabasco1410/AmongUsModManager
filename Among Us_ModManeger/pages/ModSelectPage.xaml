<Page x:Class="Among_Us_ModManeger.Pages.ModSelectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:Among_Us_ModManeger.Pages"
      Title="ModSelectPage">

    <Grid Background="White" Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Top">
            <TextBlock Text="導入可能なMod一覧"
                       FontSize="24"
                       FontWeight="Bold"
                       Margin="0,0,0,20"/>

            <StackPanel>
                <Button Content="TownOfHost（未実装）"
                Width="250"
                Height="40"
                Margin="0,5"
                Click="NotImplemented_Click"/>
                <Button Content="TownOfHost-K"
                        Width="250"
                        Height="40"
                        Margin="0,5"
                        Click="TownOfHostK_Click"/>

                <Button Content="SuperNewRoles（未実装）"
                Width="250"
                 Height="40"
                Margin="0,5"
                 Click="NotImplemented_Click"/>
        
                <Button Content="GitHubのURLから追加（未実装）"
                        Width="250"
                        Height="40"
                        Margin="0,30,0,0"
                        Click="OpenUrlInput_Click"/>
            </StackPanel>
        </StackPanel>

        <Button Grid.Row="2"
                Content="戻る"
                Width="100"
                Height="30"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="0,20,0,0"
                Click="BackToMain_Click"/>
    </Grid>
</Page>
