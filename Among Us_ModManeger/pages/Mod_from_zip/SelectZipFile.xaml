<Page x:Class="Among_Us_ModManeger.Pages.Mod_from_zip.SelectZipFile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="SelectZipFile">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- タイトル -->
            <RowDefinition Height="Auto"/>
            <!-- 拡大表示ブロック -->
            <RowDefinition Height="*" />
            <!-- スペース -->
            <RowDefinition Height="Auto"/>
            <!-- インストール・戻る -->
        </Grid.RowDefinitions>

        <!-- タイトル -->
        <TextBlock Text=".zipファイル導入画面"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"
                   Grid.Row="0"/>

        <!-- 拡大表示ブロック -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <StackPanel.LayoutTransform>
                <ScaleTransform ScaleX="1.3" ScaleY="1.3" />
            </StackPanel.LayoutTransform>

            <!-- ZIPファイル選択 -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="MOD ZIPファイル：" VerticalAlignment="Center"/>
                <TextBox Name="ZipFilePathTextBox" Width="400" Margin="10,0" IsReadOnly="True"
                         TextChanged="ZipFilePathTextBox_TextChanged"/>
                <Button Content="参照" Click="SelectZipFile_Click" Width="70"/>
            </StackPanel>

            <!-- Among Us.exe選択 -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="Among Us.exe：" VerticalAlignment="Center"/>
                <TextBox Name="ExePathTextBox" Width="400" Margin="10,0"
                         TextChanged="ExePathTextBox_TextChanged"/>
                <Button Content="参照" Click="SelectExeFile_Click" Width="70"/>
            </StackPanel>

            <!-- コピー後のフォルダ名 -->
            <StackPanel Orientation="Horizontal" Margin="0,10">
                <TextBlock Text="コピー後のフォルダ名：" VerticalAlignment="Center"/>
                <TextBox Name="CopyFolderNameTextBox" Width="200" Margin="10,0"
                         GotFocus="CopyFolderNameTextBox_GotFocus"
                         LostFocus="CopyFolderNameTextBox_LostFocus"
                         TextChanged="CopyFolderNameTextBox_TextChanged"/>
                <TextBlock Name="ErrorTextBlock" Foreground="Red" Margin="10,0" VerticalAlignment="Center"/>
            </StackPanel>
        </StackPanel>

        <!-- インストール・戻るボタン -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Content="戻る"
                    Grid.Column="0"
                    Width="80" Height="30"
                    Margin="10"
                    Click="BackButton_Click"/>

            <Button Name="InstallButton" Content="インストール開始"
                    Grid.Column="2"
                    Width="150" Height="40"
                    IsEnabled="False"
                    Margin="10"
                    Click="InstallButton_Click"/>
        </Grid>
    </Grid>
</Page>
