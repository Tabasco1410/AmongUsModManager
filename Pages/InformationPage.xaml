<Page
    x:Class="AmongUsModManager.Pages.InformationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AmongUsModManager"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="40">
        <StackPanel Spacing="20" HorizontalAlignment="Left" VerticalAlignment="Top" MaxWidth="600">
            <Image Source="/Resource/Icon.png" Width="80" Height="80" HorizontalAlignment="Left"/>

            <StackPanel Spacing="4">
                <TextBlock Text="Among Us Mod Manager" Style="{StaticResource TitleTextBlockStyle}" FontWeight="Bold"/>
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="バージョン:" Style="{StaticResource BodyTextBlockStyle}" Foreground="{ThemeResource SystemControlForegroundBaseMediumLowBrush}"/>
                    <TextBlock Text="{x:Bind local:App.AppVersion}" Style="{StaticResource BodyTextBlockStyle}" FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>

            <MenuFlyoutSeparator Margin="0,10"/>            

         
        </StackPanel>
    </Grid>
</Page>
