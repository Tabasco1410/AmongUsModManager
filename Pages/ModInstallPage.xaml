<Page
    x:Class="AmongUsModManager.Pages.ModInstallPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    mc:Ignorable="d">

    <Grid Padding="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Spacing="10" Margin="0,0,0,20">
            <TextBlock Text="Modインストール" FontSize="24" FontWeight="Bold"/>
            <Grid ColumnSpacing="8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="GitHubUrlBox" PlaceholderText="GitHub URL (https://github.com/...)"/>
                <Button Grid.Column="1" Content="URLから取得" Click="GitHubFetch_Click"/>
                <Button Grid.Column="2" Content="Zipファイル選択" Click="SelectZip_Click"/>
            </Grid>
        </StackPanel>

        <ScrollViewer Grid.Row="1" Background="{ThemeResource SystemControlBackgroundAltHighBrush}" CornerRadius="8">
            <GridView x:Name="ModGridView" Padding="15" SelectionChanged="ModGridView_SelectionChanged">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Width="160" Margin="8">
                            <Border Height="100" Background="{ThemeResource SystemControlBackgroundAccentBrush}" CornerRadius="10">
                                <SymbolIcon Symbol="Library" Foreground="White" Margin="10"/>
                            </Border>
                            <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Margin="0,8,0,0" FontWeight="SemiBold"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </ScrollViewer>

        <Border Grid.Row="2" x:Name="InstallDetailArea" Visibility="Collapsed" 
                Padding="20" Margin="0,15,0,0" CornerRadius="12"
                Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}">
            <Grid>
                <StackPanel x:Name="LoadingPanel" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <ProgressRing IsActive="True" Margin="0,0,0,10"/>
                    <TextBlock Text="GitHubからデータを取得中..."/>
                </StackPanel>

                <StackPanel x:Name="SelectionPanel" Spacing="15">
                    <TextBlock x:Name="SelectedModTitle" Text="ModName" FontSize="20" FontWeight="Bold"/>
                    <Grid ColumnSpacing="20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <ComboBox x:Name="VersionCombo" Header="Version" HorizontalAlignment="Stretch" SelectionChanged="VersionCombo_SelectionChanged"/>
                        <ComboBox Grid.Column="1" x:Name="AssetCombo" Header="File (Zip)" HorizontalAlignment="Stretch"/>
                    </Grid>
                    <TextBox x:Name="InstallFolderName" Header="インストール後のフォルダ名" PlaceholderText="例: TownOfHost_v1.0.0"/>
                    <Button Content="インストールを実行" HorizontalAlignment="Stretch" Height="45" 
                            Style="{StaticResource AccentButtonStyle}" Click="StartInstall_Click"/>
                </StackPanel>

                <ContentDialog x:Name="InstallProgressDialog"
                               Title="Modをインストール中"
                               CloseButtonText="閉じる"
                               IsSecondaryButtonEnabled="False">
                    <StackPanel Spacing="15" Width="300">
                        <TextBlock x:Name="StatusTextBlock" Text="準備中..."/>
                        <ProgressBar x:Name="InstallProgressBar" Minimum="0" Maximum="100" Value="0" IsIndeterminate="False"/>
                    </StackPanel>
                </ContentDialog>
            </Grid>
        </Border>
    </Grid>
</Page>
