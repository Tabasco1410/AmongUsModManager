<Page
    x:Class="AmongUsModManager.Pages.SetupPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20" Width="500">
        <TextBlock Text="セットアップ" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>

        <TextBlock Text="プラットフォームを選択するか、手動でフォルダを指定してください。" HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
            <ComboBox x:Name="PlatformCombo" PlaceholderText="プラットフォームを選択" Width="200" SelectionChanged="PlatformCombo_SelectionChanged">
                <ComboBoxItem Content="Steam"/>
                <ComboBoxItem Content="Epic Games"/>
                <ComboBoxItem Content="手動選択"/>
            </ComboBox>
            <Button x:Name="AutoDetectButton" Content="自動検出" Click="AutoDetectButton_Click" IsEnabled="False"/>
        </StackPanel>

        <Grid ColumnDefinitions="*, Auto" Margin="0,10,0,0">
            <TextBox x:Name="PathTextBox" PlaceholderText="フォルダパスがここに表示されます" IsReadOnly="True" Grid.Column="0" VerticalAlignment="Center"/>
            <Button Content="参照" Click="BrowseButton_Click" Grid.Column="1" Margin="8,0,0,0"/>
        </Grid>

        <TextBlock x:Name="StatusMessage" Text="" Foreground="Red" HorizontalAlignment="Center"/>

        <Button x:Name="FinishButton" Content="完了" HorizontalAlignment="Right" IsEnabled="False" Click="FinishButton_Click" Style="{StaticResource AccentButtonStyle}"/>
    </StackPanel>
</Page>
